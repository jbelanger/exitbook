{
  "name": "@exitbook/price-providers",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-provider cryptocurrency price fetching with automatic failover",
  "license": "AGPL-3.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./shared/*": "./src/shared/*",
    "./coingecko/*": "./src/coingecko/*"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "clean": "rm -rf node_modules dist",
    "lint": "eslint \"src/**/*.ts\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "providers:list": "tsx src/scripts/list-providers.ts",
    "providers:validate": "tsx src/scripts/validate-registry.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "neverthrow": "^8.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "@exitbook/core": "workspace:*",
    "@exitbook/events": "workspace:*",
    "@exitbook/http": "workspace:*",
    "@exitbook/logger": "workspace:*",
    "@exitbook/resilience": "workspace:*",
    "@exitbook/sqlite": "workspace:*"
  }
}
