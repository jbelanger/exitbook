{
  "name": "@exitbook/providers",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "license": "AGPL-3.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./app/*": "./src/app/*",
    "./blockchain/*": "./src/shared/blockchain/*",
    "./domain/*": "./src/domain/*",
    "./infrastructure/*": "./src/infrastructure/*"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "blockchain-config:generate": "tsx src/scripts/generate-config.ts",
    "blockchain-config:validate": "tsx src/scripts/validate-config.ts",
    "blockchain-providers:list": "tsx src/scripts/list-providers.ts",
    "blockchain-providers:validate": "tsx src/scripts/validate-providers.ts",
    "build": "tsc --noEmit",
    "clean": "rm -rf node_modules dist",
    "config:validate": "tsx src/scripts/validate-config.ts",
    "exchanges:generate": "tsx src/scripts/generate-exchange-config.ts",
    "exchanges:list": "tsx src/scripts/list-exchange-adapters.ts",
    "exchanges:validate": "tsx src/scripts/validate-exchange-registry.ts",
    "exchanges:validate-config": "tsx src/scripts/validate-exchange-config.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "providers:list": "tsx src/scripts/list-providers.ts",
    "providers:sync": "tsx src/scripts/sync-providers.ts",
    "providers:validate": "tsx src/scripts/validate-providers.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@polkadot/util": "^13.5.7",
    "@polkadot/util-crypto": "^13.5.7",
    "@scure/bip32": "^2.0.0",
    "bech32": "^2.0.0",
    "bitcoinjs-lib": "^7.0.0",
    "decimal.js": "^10.6.0",
    "jose": "^6.0.13",
    "neverthrow": "^8.2.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.4",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@exitbook/core": "workspace:*",
    "@exitbook/data": "workspace:*",
    "@exitbook/platform-http": "workspace:*",
    "@exitbook/shared-logger": "workspace:*"
  }
