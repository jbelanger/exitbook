{
  "name": "exitbook-cli",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "exitbook": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf node_modules dist",
    "dev": "tsx --env-file-if-exists=../../.env ./src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "setup": "mkdir -p data/logs && pnpm run build",
    "start": "node ./dist/index.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@exitbook/accounting": "workspace:*",
    "@exitbook/blockchain-providers": "workspace:*",
    "@exitbook/core": "workspace:*",
    "@exitbook/data": "workspace:*",
    "@exitbook/exchanges-providers": "workspace:*",
    "@exitbook/ingestion": "workspace:*",
    "@exitbook/logger": "workspace:*",
    "@exitbook/price-providers": "workspace:*",
    "commander": "^14.0.0",
    "neverthrow": "^8.2.0",
    "picocolors": "^1.1.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "tsconfig": "workspace:*",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.3"
  }
}
