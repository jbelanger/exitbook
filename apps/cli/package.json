{
  "name": "exitbook-cli",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "exitbook": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --noEmit && tsup",
    "clean": "rm -rf node_modules dist",
    "dev": "tsx --env-file-if-exists=../../.env ./src/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "setup": "mkdir -p data/logs && pnpm run build",
    "start": "node ./dist/index.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@exitbook/accounting": "workspace:*",
    "@exitbook/blockchain-providers": "workspace:*",
    "@exitbook/core": "workspace:*",
    "@exitbook/data": "workspace:*",
    "@exitbook/events": "workspace:*",
    "@exitbook/exchange-providers": "workspace:*",
    "@exitbook/http": "workspace:*",
    "@exitbook/ingestion": "workspace:*",
    "@exitbook/logger": "workspace:*",
    "@exitbook/price-providers": "workspace:*",
    "@inquirer/confirm": "^6.0.8",
    "@inquirer/core": "^11.1.5",
    "commander": "^14.0.3",
    "ink": "^6.8.0",
    "ink-spinner": "^5.0.0",
    "libsodium-sumo": "^0.8.2",
    "libsodium-wrappers-sumo": "^0.8.2",
    "neverthrow": "^8.2.0",
    "ora": "^9.3.0",
    "picocolors": "^1.1.1",
    "protobufjs": "^8.0.0",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@types/react": "^19.2.13",
    "ink-testing-library": "^4.0.0",
    "tsconfig": "workspace:*",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0"
  }
}
